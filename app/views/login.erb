<!DOCTYPE html>
<html lang="en">


    <body>
      <div class="loginbox">
        <%= erb :"shared/_errors" %>
        <h1>Log in to Family Fridge</h1>
        <form action="/login" method="post">
          <p>User Name</p>
        <input type="text" size='25' name="username" required="true">
          <p>Password</p>
        <input type="password" size='25' name="password" required="true">
        <input type="submit" value="login">
      </form>
      <h3><a href="/register">Register</a></h3>
      </div>
    </body>
  </html>




